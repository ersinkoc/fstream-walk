{
  "name": "fstream-walk",
  "version": "1.0.1",
  "description": "Zero-dependency, memory-efficient recursive directory walker using Async Iterators.",
  "main": "dist/index.js",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./helpers": {
      "import": "./dist/helpers.js",
      "types": "./dist/helpers.d.ts"
    },
    "./glob": {
      "import": "./dist/glob.js",
      "types": "./dist/glob.d.ts"
    },
    "./errors": {
      "import": "./dist/errors.js",
      "types": "./dist/errors.d.ts"
    },
    "./package.json": "./package.json"
  },
  "types": "dist/index.d.ts",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "clean": "rm -rf dist dist-test",
    "prebuild": "npm run clean",
    "test": "npm run build:test && node --test dist-test/test/*.test.js",
    "test:watch": "tsc -p tsconfig.test.json --watch",
    "test:coverage": "npm run build:test && node --test --experimental-test-coverage dist-test/test/*.test.js",
    "test:unit": "npm run build:test && node --test dist-test/test/index.test.js dist-test/test/edge-cases.test.js",
    "test:helpers": "npm run build:test && node --test dist-test/test/helpers.test.js",
    "test:glob": "npm run build:test && node --test dist-test/test/glob.test.js",
    "test:stress": "npm run build:test && node --test dist-test/test/stress.test.js",
    "build:test": "tsc -p tsconfig.test.json",
    "example": "npm run build && node examples/demo.js",
    "example:all": "npm run example && npm run example:filtering && npm run example:features",
    "example:filtering": "npm run build && node examples/filtering.js",
    "example:abort": "npm run build && node examples/abort-signal.js",
    "example:advanced": "npm run build && node examples/advanced-usage.js",
    "example:features": "npm run build && node examples/advanced-features.js",
    "example:helpers": "npm run build && node examples/helpers-demo.js",
    "example:glob": "npm run build && node examples/glob-demo.js",
    "bench": "npm run build && node benchmarks/performance.js",
    "bench:memory": "npm run build && node --expose-gc benchmarks/memory.js",
    "bench:all": "npm run bench && npm run bench:memory",
    "check": "tsc --noEmit",
    "validate": "npm run check && npm run build:test && node --test dist-test/test/*.test.js",
    "prepublishOnly": "npm run validate && npm run build",
    "preversion": "npm run validate",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ersinkoc/fstream-walk.git"
  },
  "bugs": {
    "url": "https://github.com/ersinkoc/fstream-walk/issues"
  },
  "homepage": "https://github.com/ersinkoc/fstream-walk#readme",
  "keywords": [
    "fs",
    "walk",
    "walker",
    "directory",
    "recursive",
    "stream",
    "async-iterator",
    "async",
    "iterator",
    "generator",
    "zero-dependency",
    "glob",
    "find",
    "search",
    "files",
    "folders",
    "tree",
    "traverse",
    "scan",
    "memory-efficient",
    "performance",
    "typescript"
  ],
  "author": "fstream-walk contributors",
  "license": "MIT",
  "files": [
    "dist/**/*.js",
    "dist/**/*.d.ts",
    "dist/**/*.js.map",
    "dist/**/*.d.ts.map",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "devDependencies": {
    "typescript": "^5.3.0",
    "@types/node": "^20.10.0"
  }
}
